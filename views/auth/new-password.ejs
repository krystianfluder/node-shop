<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="container">
    <h1 class="mb-4">Set a new password</h1>
    <% if (errorMessage) { %>
    <div class="alert alert-primary"><%= errorMessage %></div>
    <% } %>
    <form class="mt-4" action="/new-password" method="POST">
      <div class="form-group">
        <label for="token">Code</label>
        <input class="form-control" type="text" name="token" id="token" value="<%= token %>">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" value="">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn btn-primary" type="submit">Reset Password</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>