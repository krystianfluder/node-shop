<script>
  const controls = document.querySelectorAll(".add-to-cart");

  controls.forEach((control) => {
    let counter = 1;

    const minus = control.querySelector(".add-to-cart-minus");
    const plus = control.querySelector(".add-to-cart-plus");
    const display = control.querySelector(".add-to-cart-display");
    const button = control.querySelector(".add-to-cart-button");
    const iQuantity = control.querySelector(".add-to-cart-iquantity");

    counter = parseInt(iQuantity.value);
    display.textContent = counter;

    const save = () => {
      display.textContent = counter;
      iQuantity.value = counter;
    };

    minus.addEventListener("click", () => {
      if (counter >= 2) {
        counter -= 1;
      }
      save();
    });

    plus.addEventListener("click", () => {
      counter += 1;
      save();
    });
  });
</script>
