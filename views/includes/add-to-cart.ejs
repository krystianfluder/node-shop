<form class="add-to-cart d-flex flex-column" action="/cart" method="post">
  <div class="p-2 d-flex align-items-center justify-content-between">
    <ion-icon class="add-to-cart-minus" name="remove-outline"></ion-icon>
    <span class="add-to-cart-display"></span>
    <ion-icon class="add-to-cart-plus" name="add-outline"></ion-icon>
  </div>

  <button class="btn btn-primary .add-to-cart-button" type="submit">
    <%= message %>
  </button>

  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <input
    class="add-to-cart-iproductId"
    type="hidden"
    name="productId"
    value="<%= product._id %>"
  />
  <input
    class="add-to-cart-iquantity"
    type="hidden"
    name="quantity"
    value="<%= quantity %>"
  />
</form>

