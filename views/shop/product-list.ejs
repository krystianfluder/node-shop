<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="container">
    <%- include('../includes/breadcrumbs-and-header.ejs') %>
    
    <% if (prods.length > 0) { %>

    <div class="d-flex">
      <% for (let product of prods) { %>
        <div class="card" style="width: 200px;">
          <img class="card-image-top" src="/<%= product.imageUrlSmall %>" alt="<%= product.title %>">
          <div class="card-body">
            <h2>
              <%= product.title %>
            </h2>
            <p>
              <%= product.price/100 %> <%= process.env.CURRENCY %>
            </p>
            <div class="card-group d-flex justify-content-between">
            <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
            <% if (isAuthenticated) { %>
              <%- include('../includes/add-to-cart.ejs', {product: product}) %>
            <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <% } else { %>
    <h1>No Products Found!</h1>
    <% } %>
    
  </main>
  <%- include('../includes/end.ejs') %>
  <%- include('../includes/add-to-cart-script.ejs') %>